{
  "name": "glide",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "bash ./scripts/bootstrap.sh",

    "dev": "pnpm tsn scripts/dev.mts",
    "dev:watch": "pnpm tsn scripts/dev.mts --watch",

    "build": "pnpm glider build",

    "launch": "pnpm glider run",
    "mach": "./engine/mach",

    "bundle": "bash ./scripts/bundle.sh",
    "build:docs": "pnpm tsn scripts/build-docs.mts",
    "build:docs:index": "bash ./scripts/build-docs-index.sh",
    "build:docs:api": "pnpm tsn ./scripts/build-api-reference.mts",
    "build:docs:full": "pnpm build:docs --symlink=false && pnpm build:docs:api && pnpm build:docs:index",
    "build:types": "bash ./scripts/generate-types.sh",
    "build:js": "pnpm tsn ./scripts/generate-js.mts src/glide/browser/base/content/sandbox-properties.mjs",

    "lint": "./scripts/lint.sh",
    
    "tsc": "tsc",
    "format": "prettier -w .",
    "tsn": "node --no-warnings --experimental-strip-types \"$@\"",
    "test": "pnpm mach test glide"
  },
  "keywords": [],
  "author": "",
  "license": "MPL-2.0",
  "dependencies": {
    "ts-blank-space": "^0.6.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@glide-browser/glider": "github:glide-browser/glider",
    "@markdoc/markdoc": "^0.5.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.14.0",
    "@types/webidl2": "^24.4.3",
    "chokidar": "^4.0.3",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.2",
    "execa": "^9.5.2",
    "meow": "^13.2.0",
    "prettier": "^3.5.3",
    "shiki": "^3.2.1",
    "ts-morph": "^26.0.0",
    "type-fest": "^4.39.1",
    "webextension-polyfill": "github:glide-browser/webextension-types",
    "webidl2": "^24.4.1"
  },
  "packageManager": "pnpm@10.11.0",
  "private": true
}
